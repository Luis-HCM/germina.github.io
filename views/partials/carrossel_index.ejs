<div class="slideshow-container">
    <% for(let noticia of noticias.slice(2,5)) { %> 
      <div class="mySlides fade">
        <div class="moldura" >
          <a href="/noticia/<%= noticia.idNoticia %>">
            <div class="noticia1_container">
              <div class="noticia1_square">
                <img class="noticia1_img" style="width:100%;"  src="<%= noticia.imagem %>">
                <p class="noticia1_h1"><%= noticia.titulo %></p>
                <p class="noticia1_p"><%= noticia.conteudo.slice(0, 75) %>...</p>
              </div>    
            </div>  
        </a>
      </div> 
      </div>
    <% } %>
    <a class="prev" onclick="plusSlides(-1)">❮</a>
    <a class="next" onclick="plusSlides(1)">❯</a>
  </div>